{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "comma-dangle": ["error", "always"],
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-single"],
        // "space-in-brackets": ["error", "never"], deprecated
        "object-curly-spacing": ["error", "never"],
        "array-bracket-spacing": ["error", "never"],
        "no-duplicate-imports": "error"
    }
}
