###
# @name List all Categories
GET {{host}}/restapis/{{api_id}}/local/_user_request_/hackathon/{{hackathon_id}}/categories

###
# @name Create Category
POST {{host}}/restapis/{{api_id}}/local/_user_request_/category
Content-Type: application/json

{
  "title": "Form over Function",
  "description": "This is for the horrible \"projects\" which are actually just flashy presentations that always win",
  "hackathonId": "{{hackathon_id}}"
}

###
# @name Edit Category
PUT {{host}}/restapis/{{api_id}}/local/_user_request_/category/{{category_id}}
Content-Type: application/json

{
  "title": "Renamed Category",
  "description": "This is now very different from what it was before!!!"
}

###
# @name Get Category
GET {{host}}/restapis/{{api_id}}/local/_user_request_/category/{{category_id}}

###
# @name Remove Category
DELETE {{host}}/restapis/{{api_id}}/local/_user_request_/category/{{category_id}}
